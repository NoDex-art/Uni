}



void task4() {
    bool input_correct = false;
    while (!input_correct) {
        cout << "������ ��������:" << endl;
        cout << "1. ������ ����������� �������" << endl;
        cout << "2. �������� �� ������� ��������� �����" << endl;
        cout << "3. ����� ������" << endl;
        cout << "4. �����" << endl;

        int choice;
        cin >> choice;

        switch (choice) {
        case 1:
            task1();
            input_correct = true;
            break;
        case 2:
            task2();
            input_correct = true;
            break;
        case 3:
            task3();
            input_correct = true;
            break;
        case 4:
            input_correct = true;
            break;
        default:
            cout << "����������� ����. ��������� �� ���." << endl;
            cin.clear();
            cin.ignore(numeric_limits<streamsize>::max(), '\n');
            break;
        }
    }
}

