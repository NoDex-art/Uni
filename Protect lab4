// ���������� �������
// �������� ������� ������� ����������� �������
int rootCount(double a, double b, double c) {
    if (a == 0) {
        return -1; // �� � ���������� �������� (�������)
    }

    double discriminant = b * b - 4 * a * c;

    if (discriminant > 0) {
        return 2; // ��� ����� ������
    }
    else if (discriminant == 0) {
        return 1; // ���� ����� (��� �����������)
    }
    else {
        return 0; // ���� ������ �������
    }
}

// ��������, �� ����� � �������� ����������
bool isOddThreeDigit(int n) {
    return (n > 99 && n < 1000 && n % 2 != 0);
}

// ������� ����� ������ �����
int hundredsDigit(int n) {
    if (n < 100) return -1; // �������, ����� ������

    n = abs(n); // ������, ���� ��'����
    if (n > 999) {
        return (n / 100) % 10;
    }
    else if (n > 99) {
        return n / 100; // ��������� ����� ������
    }
    else return -1;
}


void task1() {
    double a, b, c;
    cout << "������ ����������� ����������� ������� (a, b, c): ";
    cin >> a >> b >> c;

    int roots = rootCount(a, b, c);
    if (roots == -1) {
        cout << "�� � ���������� �������� (a �� ���� ���� 0)." << endl;
    }
    else {
        cout << "ʳ������ �������: " << roots << endl;
    }
}

void task2() {
    int num;
    cout << "������ ���� �����: ";
