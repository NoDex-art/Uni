void task3() {
    int num;
    cout << "������ ���� �����: ";
    cin >> num;

    if (cin.fail()) {
        cout << "����������� ���. ���� �����, ������ ���� �����." << endl;
        cin.clear();
        cin.ignore(numeric_limits<streamsize>::max(), '\n');
